<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linear_edittext_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:hint="Введите название валюты"
                android:layout_margin="8dp"
                android:ems="10"
                android:inputType="text"
                android:src="@mipmap/ic_launcher"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/displayCurrency"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_marginEnd="15dp"
                android:text="Display"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_edittext_button">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_course_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textSize= "50dp" />
        </ScrollView>

            <Button
                android:id="@+id/openWebSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scroll_course"
                android:text="min-api.cryptocompare.com"/>

    </RelativeLayout>

</LinearLayout>